    <insert id="insertOrder" parameterType="com.example.metawater.domain.OrderVO">
        INSERT INTO orders
        (order_no, product_no, mem_no, order_state, order_hopedate, order_add, order_name, order_phone, order_date, order_pay, rental_term, rental_payDate)
        VALUES
            (orders_seq.nextval, #{productNo}, #{memberNo}, '주문 완료', sysdate+10, #{orderAddress}, #{orderName}, #{orderPhone}, sysdate, #{orderPay}, null, null)
    </insert>

    <insert id="insertRental" parameterType="com.example.metawater.domain.OrderVO">
        INSERT INTO orders
        (order_no, product_no, mem_no, order_state, order_hopedate, order_add, order_name, order_phone, order_date, order_pay, rental_term, rental_payDate)
            VALUES (orders_seq.nextval, #{productNo}, #{memberNo}, '주문 완료', sysdate+10, #{orderAddress}, #{orderName}, #{orderPhone}, sysdate, #{orderPay}, #{rentalTerm}, #{rentalPaydate})
    </insert>

</mapper>